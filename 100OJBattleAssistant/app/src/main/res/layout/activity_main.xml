<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:title="100%鲜橙汁 战斗助手"
        app:titleTextColor="@color/black" />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Character Selection -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/character_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="你的角色:"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="46dp">

                    <AutoCompleteTextView
                        android:id="@+id/character_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/input_background"
                        android:hint="选择角色..."
                        android:padding="12dp"
                        android:paddingEnd="40dp"
                        android:textSize="16sp"
                        android:completionThreshold="0"
                        android:dropDownHeight="200dp"
                        android:inputType="textNoSuggestions"
                        android:selectAllOnFocus="true"
                        android:singleLine="true" />

                    <TextView
                        android:id="@+id/dropdown_arrow"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical|end"
                        android:layout_marginEnd="12dp"
                        android:text="▼"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:gravity="center"
                        android:contentDescription="下拉选择"
                        android:clickable="false"
                        android:focusable="false" />

                </FrameLayout>

            </LinearLayout>

            <!-- HP Input -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/hp_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="当前HP:"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/hp_minus_2"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="-2"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_marginEnd="4dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/hp_minus_1"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="-1"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_marginEnd="4dp" />

                    <EditText
                        android:id="@+id/hp_input"
                        android:layout_width="0dp"
                        android:layout_height="37dp"
                        android:layout_weight="1.2"
                        android:gravity="center"
                        android:inputType="number"
                        android:text="0"
                        android:background="@drawable/input_background"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/hp_plus_1"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="+1"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/hp_plus_2"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="+2"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_marginStart="4dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Attack Input -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/attack_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="对手最终攻击力:"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/attack_clear"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="C"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_marginEnd="4dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/attack_minus_1"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="-1"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_marginEnd="4dp" />

                    <EditText
                        android:id="@+id/attack_input"
                        android:layout_width="0dp"
                        android:layout_height="37dp"
                        android:layout_weight="1.2"
                        android:gravity="center"
                        android:inputType="number"
                        android:text="0"
                        android:background="@drawable/input_background"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/attack_plus_1"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="+1"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/attack_plus_3"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="+3"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_marginStart="4dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Temporary Modifiers -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/temp_modifiers_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="临时修正"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Defense Modifier -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginEnd="8dp">

                            <TextView
                                android:id="@+id/def_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="防御:"
                                android:textSize="13sp"
                                android:layout_marginEnd="6dp" />

                            <EditText
                                android:id="@+id/def_mod_input"
                                android:layout_width="50dp"
                                android:layout_height="32dp"
                                android:gravity="center"
                                android:inputType="numberSigned"
                                android:text="0"
                                android:textSize="13sp"
                                android:background="@drawable/input_background_small" />

                        </LinearLayout>

                        <!-- Evasion Modifier -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginStart="8dp">

                            <TextView
                                android:id="@+id/evd_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="闪避:"
                                android:textSize="13sp"
                                android:layout_marginEnd="6dp" />

                            <EditText
                                android:id="@+id/evd_mod_input"
                                android:layout_width="50dp"
                                android:layout_height="32dp"
                                android:gravity="center"
                                android:inputType="numberSigned"
                                android:text="0"
                                android:textSize="13sp"
                                android:background="@drawable/input_background_small" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Strategy Selection -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/strategy_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="策略选择"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <RadioGroup
                        android:id="@+id/strategy_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/strategy_survival"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="生存优先"
                            android:textSize="12sp"
                            android:layout_marginEnd="4dp" />

                        <RadioButton
                            android:id="@+id/strategy_damage"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="期望伤害"
                            android:textSize="12sp"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp" />

                        <RadioButton
                            android:id="@+id/strategy_resistance"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="抗性保留"
                            android:textSize="12sp"
                            android:layout_marginStart="4dp"
                            android:checked="true" />

                    </RadioGroup>

                    <TextView
                        android:id="@+id/strategy_explanation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="说明：以【期望抗性】为最优先，依次比较存活率/存活HP/期望伤害。"
                        android:textSize="11sp"
                        android:textColor="@color/gray"
                        android:layout_marginTop="6dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Recommendation Result -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp"
                app:strokeWidth="2dp"
                app:strokeColor="@color/primary">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/recommendation_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="推荐行动:"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/recommendation_action"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="..."
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginBottom="12dp"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/recommendation_explanation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="请填入数据"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Expandable Details Section -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/toggle_details_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="显示详情 ▼"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:id="@+id/details_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- Process Details -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/process_details_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="计算过程参考"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/process_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="12sp"
                            android:fontFamily="monospace"
                            android:textColor="@color/text_secondary" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Probability Analysis -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/probability_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="概率深度分析"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="12dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/defend_probability"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text=""
                                android:textSize="12sp"
                                android:fontFamily="monospace"
                                android:textColor="@color/text_secondary"
                                android:layout_marginEnd="8dp" />

                            <TextView
                                android:id="@+id/evade_probability"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text=""
                                android:textSize="12sp"
                                android:fontFamily="monospace"
                                android:textColor="@color/text_secondary"
                                android:layout_marginStart="8dp" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Language Toggle -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/language_toggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="中 | EN"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_marginBottom="16dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>